<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ActionBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/frxs_blue_light">

        <include layout="@layout/view_title" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/frxs_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_product_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/frxs_white"
            android:textSize="20dp"
            android:paddingBottom="@dimen/dp_4"/>

        <TextView
            android:id="@+id/tv_product_lines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/frxs_white"
            android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finishPick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/frxs_blue_light"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_store_sore"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="完成拣货"
                android:textColor="@color/frxs_yellow"
                android:textSize="@dimen/font_max"/>

            <TextView
                android:id="@+id/finishPickTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="完成拣货"
                android:textColor="@color/frxs_white"
                android:textSize="@dimen/font_larger" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>