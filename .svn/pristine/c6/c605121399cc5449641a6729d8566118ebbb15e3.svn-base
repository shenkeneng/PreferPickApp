<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llBg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_item"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

     <!--   <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/frxs_blue"
            android:textSize="@dimen/spacing_huge"/>
-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:ellipsize="end"
                android:text="防水防油防腐防烫防滑防冰免洗免擦桌布 可裁剪 130cm至180cm 1块 颜色随机"
                android:textColor="@color/frxs_gray"
                android:textSize="@dimen/font_max"
                android:gravity="center_vertical"
                android:minLines="3"/>
        <!--</LinearLayout>-->
    </LinearLayout>

    <TextView
        android:id="@+id/tvProductNum"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="match_parent"
        android:text="99"
        android:textColor="@color/frxs_red"
        android:textSize="@dimen/spacing_huge"
        android:gravity="center"
        android:background="@drawable/shape_bg_item_ye"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_item"
        android:text="-  已到底部  -"
        android:textSize="@dimen/spacing_large"
        android:textColor="@color/frxs_gray_dark"
        android:padding="20dp"
        android:gravity="center"
        android:visibility="gone"/>
</LinearLayout>